extends layout 


block content 
    h1= title 

    include form-error 


        form(method='post' action=`/books/${book.id}`)
            p 
                label(for="title") Title
                input#title(name="title" type="text" value=`${book.title}`)
            p  
                label(for="author") Author
                input#author(name='author' type='text' value=`${book.author}`)
            p  
                label(for="genre") Genre
                input#genre(name='genre' type='text' value=`${book.genre}`)
            p  
                label(for="Year") Year
                input#year(name='year' type='text' value=`${book.year}`)
            p
                input(type='submit' value='Update Book')
            p
                a(class="button", href='/books') Cancel

        form(method='post' action=`/books/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?')")
            p 
                a(class=button href='/') Cancel 
            p 
                input(type="submit" value="Delete Book")